# FENIX Trading Bot - Environment Variables
# Copy this file as .env and fill in your actual credentials

# ===== EXCHANGE CONFIGURATION =====
# Select your desired exchange. Supported options: 'binance', 'coinbasepro', 'kraken', 'gemini'
EXCHANGE_ID=binance

# --- API Credentials ---
# Enter the API key and secret for your selected exchange.

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase Pro (GDAX)
COINBASEPRO_API_KEY=your_coinbasepro_api_key_here
COINBASEPRO_API_SECRET=your_coinbasepro_api_secret_here
COINBASEPRO_PASSPHRASE=your_coinbasepro_passphrase_here

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_SECRET=your_gemini_api_secret_here


# ===== ENVIRONMENT CONFIGURATION =====
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===== TRADING CONFIGURATION =====
TRADING_MODE=testnet
DEFAULT_SYMBOL=BTC/USDT
MAX_POSITION_SIZE=100

# ===== RISK CONFIGURATION =====
MAX_DAILY_LOSS=500
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=4.0

# ===== LLM CONFIGURATION =====
# Optional: If you use external LLM services
OLLAMA_MODEL=qwen2.5:7b
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
LLM_PROFILE=groq_free
LLM_ALLOW_NOOP_STUB=1  # Set to 0 in production to fail fast when LLM providers are missing

# ===== HUGGINGFACE API (RECOMMENDED for parallelization) =====
# Get a free token at: https://huggingface.co/settings/tokens
# Free tier: ~30 requests/min (sufficient for trading)
HUGGINGFACE_API_KEY=hf_your_token_here
# Alternative: HF_TOKEN=hf_your_token_here

# ===== HYBRID CONFIGURATION (MLX Local + Cloud APIs) =====
# Force specific agents to use API (optional)
# Useful for parallelization without consuming local RAM
FORCE_API_SENTIMENT=false
FORCE_API_VISUAL=false
FORCE_API_QABBA=false

# Automatic fallback if API fails â†’ MLX local
ENABLE_API_FALLBACK=true

# Ollama Cloud (alternative to HuggingFace)
# OLLAMA_CLOUD_API_KEY=your_ollama_key_here
# OLLAMA_CLOUD_URL=https://ollama.ai/api

# ===== MONITORING CONFIGURATION =====
# Optional: For alerts and notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ===== DATABASE CONFIGURATION =====
# Optional: If you use an external database
DATABASE_URL=sqlite:///fenix_trading.db

# ===== CACHE CONFIGURATION =====
REDIS_URL=redis://localhost:6379/0

# ===== SECURITY CONFIGURATION =====
SECRET_KEY=your_secret_key_for_encryption_here
JWT_SECRET=your_jwt_secret_here

# ===== DEVELOPMENT CONFIGURATION =====
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true

# ===== PERFORMANCE CONFIGURATION =====
MAX_WORKERS=4
CACHE_TTL=300
BATCH_SIZE=100

# ===== TIMEFRAMES CONFIGURATION =====
PRIMARY_TIMEFRAME=1m
SECONDARY_TIMEFRAME=5m
ANALYSIS_TIMEFRAME=15m

# ===== AGENTS CONFIGURATION =====
ENABLE_SENTIMENT_AGENT=true
ENABLE_TECHNICAL_AGENT=true
ENABLE_VISUAL_AGENT=true
ENABLE_QABBA_AGENT=true
ENABLE_RISK_AGENT=true

# ===== ALERTS CONFIGURATION =====
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=false

# ===== BACKUP CONFIGURATION =====
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true
